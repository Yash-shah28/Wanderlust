<% layout("/layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>
                    <%= listingdata.title %>
                </h3>
            </div>
            <div class="card col-6 offset-3 listing-card">
                <img src="<%= listingdata.image %>" class="card-img-top show-img" alt="Listings">
                <div class="card-body mt-3">
                    <p class="card-text">

                        <%= listingdata.description %> <br>
                            &#8377; <%= Number(listingdata.price).toLocaleString("en-IN") %> <br>
                                <%= listingdata.country %> <br>
                                    <%= listingdata.location %>

                    </p>
                </div>
            </div>

            <br>
        </div>
        <div class="btns">
            <a href="/listings/<%= listingdata._id %>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

            <form action="/listings/<%= listingdata._id %>/?_method=DELETE" method="post">
                <button class="btn btn-dark  offset-5">Delete</button>
            </form>
        </div>

        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listingdata._id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label class="form-label" for="rating">Rating</label>
                    <input class="form-range" type="range" min="1" max="5" id="rating" name="review[rating]">
                </div>
                <div class="mb-3 mt-3">
                    <label class="form-label" for="Comments">Comment</label>
                    <textarea class="form-control" name="review[comment]" id="comment" cols="30" rows="5"
                        required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>

                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>

            <hr>
            <p><b>All Review</b></p>
            <div class="row">
                <% for( review of listingdata.reviews) { %>
                    <div class="card col-5 mb-3 ms-3">
                        <div class="card-body">
                            <h5 class="card-title">John Doe</h5>
                            <p class="card-text">
                                <%= review.comment %>
                            </p>
                            <p class="card-text">
                                <%= review.rating %> stars
                            </p>
                        </div>
                        <form action="/listings/<%= listingdata._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3" method="post">
                            <button class="btn btn-dark">Delete</button>
                        </form>
                    </div>
                    <% } %>
            </div>
        </div>



    </body>

    </html>